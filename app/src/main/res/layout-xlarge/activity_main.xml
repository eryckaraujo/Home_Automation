<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eryckaraujo.homeautomation.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aguardando..."
        android:id="@+id/txtResultado"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSala" />

    <Button
        android:text="Cozinha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSala"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnCozinha" />

    <Button
        android:text="Quarto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCozinha"
        android:layout_alignRight="@+id/btnCozinha"
        android:layout_alignEnd="@+id/btnCozinha"
        android:id="@+id/btnQuarto1" />

    <Button
        android:text="Quarto2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnQuarto1"
        android:layout_alignLeft="@+id/btnQuarto1"
        android:layout_alignStart="@+id/btnQuarto1"
        android:id="@+id/Quarto2" />

    <Button
        android:text="Banheiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnQuarto2"
        android:layout_alignLeft="@+id/btnQuarto2"
        android:layout_alignStart="@+id/btnQuarto2"
        android:id="@+id/btnBanheiro" />

    <Button
        android:text="Garagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBanheiro"
        android:layout_alignRight="@+id/btnBanheiro"
        android:layout_alignEnd="@+id/btnBanheiro"
        android:id="@+id/btnGaragem" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button6"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:id="@+id/button7" />


</RelativeLayout>
